{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 5am on the first day of the month"]
    },
    "extends": ["config:recommended", ":dependencyDashboard"],
    "commitMessagePrefix": ":arrow_up: ",
    "labels": ["dependencies"],
    "packageRules": [
        {
            "groupName": "üí¨ WhatsApp & bot core",
            "matchPackageNames": ["/^whatsapp-web/", "/^qrcode/"]
        },
        {
            "groupName": "‚è∞ Scheduling & config",
            "matchPackageNames": ["/^node-cron/", "/^dotenv/"]
        },
        {
            "groupName": "üîç Linting & formatting",
            "matchPackageNames": ["/^eslint/", "/^prettier/", "/^globals/", "/^@eslint/"]
        },
        {
            "groupName": "üö® Major version updates",
            "matchUpdateTypes": ["major"],
            "dependencyDashboardApproval": true
        }
    ]
}
