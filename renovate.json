{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 5am on the first day of the month"]
    },
    "extends": ["config:recommended", ":dependencyDashboard"],
    "commitMessagePrefix": ":arrow_up: ",
    "labels": ["dependencies"],
    "packageRules": [
        {
            "groupName": "ğŸ’¬ WhatsApp & bot core",
            "matchPackageNames": ["/^whatsapp-web/", "/^qrcode/"]
        },
        {
            "groupName": "â° Scheduling & config",
            "matchPackageNames": ["/^node-cron/", "/^dotenv/"]
        },
        {
            "groupName": "ğŸ” Linting & formatting",
            "matchPackageNames": ["/^eslint/", "/^prettier/", "/^globals/", "/^@eslint/"],
            "automerge": true
        },
        {
            "groupName": "ğŸ§ª Testing",
            "matchPackageNames": ["/^vitest/"],
            "automerge": true
        },
        {
            "groupName": "ğŸ”§ Dev tooling",
            "matchPackageNames": ["/^husky/", "/^lint-staged/"],
            "automerge": true
        },
        {
            "description": "Automerge minor and patch updates",
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true
        },
        {
            "groupName": "ğŸš¨ Major version updates",
            "matchUpdateTypes": ["major"],
            "automerge": false,
            "dependencyDashboardApproval": true
        }
    ]
}
