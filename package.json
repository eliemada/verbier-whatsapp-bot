{
    "name": "verbier-whatsapp-bot",
    "version": "2.0.0",
    "description": "WhatsApp bot for Verbier webcam images with MeteoSwiss weather",
    "type": "module",
    "main": "bot.js",
    "scripts": {
        "start": "node bot.js",
        "dev": "node --watch bot.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky || true"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "dotenv": "^17.0.0",
        "node-cron": "^4.0.0",
        "qrcode-terminal": "^0.12.0",
        "whatsapp-web.js": "^1.26.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.0",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.1",
        "vitest": "^4.0.14"
    }
}
